<div class="new-form">
  <div class="container ">
    <div class="row pt-5">
      <div class="col-6">
        <h2>New Project</h2>
      </div>
      <div class="col-6">
        <%= simple_form_for @project do |f| %>
          <%= f.input :name%>
          <%= f.input :description%>
          <%= f.input :start_date%>
          <%= f.input :end_date%>
          <div class="row center-btn">
            <%= f.submit "Update", class: "btn btn-primary new-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
