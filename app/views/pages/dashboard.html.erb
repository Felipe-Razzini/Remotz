<div class="d-flex" style="gap: 1.5rem">
  <%# <%= render "shared/sidebar" %>
  <div class="dashboard-grid">

    <div class="two dashboard-item grid-col-span-2">

      <div class="d-flex tasks-dashboard-card-title position-sticky fixed-top">
        <p><strong>Today tasks</strong></p>
        <%= link_to "Add",  new_task_path(@task), class: "btn-add-task"%>
      </div>

      <%= render "tasks/tasks_today" %>
    </div>

    <div class="one dashboard-item grid-col-span-2">

      <div class="dashboard-card-top position-sticky fixed-top">
        <div>
          <p class="dashboard-card-title"><strong>Project summary</strong></p>
        </div>
        <div class="dashboard-card-headers">
          <p><strong>Name</strong></p>
          <p><strong>Due date</strong></p>
          <p><strong>Status</strong></p>
        </div>
      </div>
      <% @projects.each do |project| %>
      <div class="dashboard-card-infos">
        <p><%= project.name %></p>
        <p><%= project.end_date.strftime('%d %b %Y') %></p>
        <p><%= project.status %></p>
      </div>
      <% end %>
    </div>

    <div class="three dashboard-item">
      <p class="dashboard-card-title"><strong>Overall projects progress</strong></p>
      <div>
        <%= pie_chart @projects_status_count, donut: true, width: "230px", height: "230px", colors: ["#14ae5ca7", "#4d4d9dc1", "#c4381cc4"] %>
      </div>
    </div>

    <div class="four dashboard-item">
      <p class="dashboard-card-title"><strong>Tasks workload</strong></p>
      <div>
        <%= bar_chart @projects_workload_count, width: "240px", height: "240px" %>
      </div>
    </div>

    <div class="five grid-col-span-3">
      <iframe style="border-radius:12px" src="https://open.spotify.com/embed/playlist/37i9dQZF1DZ06evO3Cnq2J?utm_source=generator" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    </div>
  </div>
</div>
