<%# FORM TO CREATE NEW TASK - HIDDEN%>
  <%= simple_form_for @task, html: { class: 'custom-form-class' } do |f| %>
    <div class="form-row d-flex">
      <div class="form-group col-md-6">
        <%= f.input :title, input_html: { class: 'custom-input-class' }%>
      </div>

      <div class="form-group col-md-3">
        <%= f.input :status, collection: ["In progress", "Delayed"], input_html: { class: 'custom-input-class' } %>
      </div>

      <div class="form-group col-md-3">
        <%= f.input :priority , :collection => %w[High Medium Low], input_html: { class: 'custom-input-class' } %>
      </div>
    </div>

    <div class="form-row">
      <%= f.input :start, input_html: { class: 'custom-input-class' }%>
    </div>

    <div class="form-row">
      <%= f.input :end, input_html: { class: 'custom-input-class' }%>
    </div>

    <%= f.submit "Add new task", class: "btn btn-primary new-btn custom-submit-class" %>
  <% end %>
<%# END OF FORM TO CREATE NEW TASK - HIDDEN%>
