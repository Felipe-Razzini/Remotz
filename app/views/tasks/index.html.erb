<div class="tasks-container" data-controller="task-calendar">
  <ul class="nav border-bottom border-1 mb-5">
    <li class="nav-item" >
      <a class="nav-link" href="#" data-task-calendar-target="link" data-action="click->task-calendar#switchToMonth">Monthly</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#" data-task-calendar-target="link" data-action="click->task-calendar#switchToWeek">Weekly</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#" data-task-calendar-target="link" data-action="click->task-calendar#switchToAllTasks">All Tasks</a>
    </li>
  </ul>

  <%# Monthly %>
  <div class="<%= params[:type] == 'month' ? '' : 'd-none' %>" data-task-calendar-target="month">
    <%= month_calendar(events: @tasks_cal, end_attribute: :end) do |date, tasks| %>
      <div class="day-date">
        <%= date %>
      </div>
      <% tasks.each do |task| %>
        <div class="meeting <%= task.priority %>">
          <p><strong><%= task.title %></strong></p>
          <small><%= task.time %></small>
        </div>
      <% end %>
    <% end %>
  </div>

  <%# Weekly %>
  <div  class="<%= params[:month] == 'month' ? 'd-none' : '' %>" data-task-calendar-target="week">
    <%= week_calendar(events: @tasks_cal, end_attribute: :end) do |date, tasks| %>
      <div class="day-date">
        <%= date %>
      </div>
      <% tasks.each do |task| %>
        <div class="meeting <%= task.priority %>">
          <p><strong><%= task.title %></strong></p>
          <small><%= task.time %></small>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="d-none" data-task-calendar-target="alltasks">
<%= render "tasks/all" %>
</div>
